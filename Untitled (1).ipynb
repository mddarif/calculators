import cv2
import mediapipe as mp
import numpy as np

# ---------------- Camera ----------------
cap = cv2.VideoCapture(0)

# ---------------- Mediapipe ----------------
mp_hands = mp.solutions.hands
mp_draw = mp.solutions.drawing_utils

hands = mp_hands.Hands(
    max_num_hands=1,
    min_detection_confidence=0.7,
    min_tracking_confidence=0.7
)

# ---------------- Calculator Layout ----------------
buttons = [
    ['7','8','9','/'],
    ['4','5','6','*'],
    ['1','2','3','-'],
    ['0','.','=','+'],
    ['C','','','']
]

button_size = 80
expression = ""
delay = 0

# ---------------- Functions ----------------
def draw_buttons(img):
    for i in range(len(buttons)):
        for j in range(4):
            value = buttons[i][j]
            if value == "":
                continue
            x = j * button_size + 50
            y = i * button_size + 70
            cv2.rectangle(img, (x,y), (x+button_size,y+button_size), (255,0,255), 2)
            cv2.putText(img, value, (x+25,y+50),
                        cv2.FONT_HERSHEY_SIMPLEX, 1, (255,0,255), 2)

def draw_display(img, text):
    cv2.rectangle(img, (50, 10), (370, 60), (0,0,0), -1)
    cv2.putText(img, text, (60, 50),
                cv2.FONT_HERSHEY_SIMPLEX, 1, (0,255,0), 2)

def get_landmarks(img):
    imgRGB = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
    result = hands.process(imgRGB)
    lm_list = []

    if result.multi_hand_landmarks:
        for handLms in result.multi_hand_landmarks:
            for id, lm in enumerate(handLms.landmark):
                h, w, _ = img.shape
                cx, cy = int(lm.x * w), int(lm.y * h)
                lm_list.append((id, cx, cy))
            mp_draw.draw_landmarks(img, handLms, mp_hands.HAND_CONNECTIONS)

    return lm_list

def distance(p1, p2):
    return np.linalg.norm(np.array(p1) - np.array(p2))

def check_click(lm_list):
    global expression, delay

    # ðŸ”¥ SAFETY CHECK
    if len(lm_list) < 13:
        return

    x1, y1 = lm_list[8][1], lm_list[8][2]    # Index finger
    x2, y2 = lm_list[12][1], lm_list[12][2]  # Middle finger

    dist = distance((x1, y1), (x2, y2))

    if dist < 40 and delay == 0:
        for i in range(len(buttons)):
            for j in range(4):
                value = buttons[i][j]
                if value == "":
                    continue

                x = j * button_size + 50
                y = i * button_size + 70

                if x < x1 < x+button_size and y < y1 < y+button_size:
                    if value == "=":
                        try:
                            expression = str(eval(expression))
                        except:
                            expression = "Error"
                    elif value == "C":
                        expression = ""
                    else:
                        if expression == "Error":
                            expression = ""
                        expression += value
                    delay = 1

# ---------------- Main Loop ----------------
while True:
    success, img = cap.read()
    if not success:
        break

    img = cv2.flip(img, 1)

    draw_buttons(img)
    draw_display(img, expression)

    lm_list = get_landmarks(img)
    check_click(lm_list)

    if delay > 0:
        delay += 1
        if delay > 15:
            delay = 0

    cv2.imshow("Virtual Gesture Calculator", img)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
